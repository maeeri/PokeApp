
@{
    ViewData["Title"] = "Markeplace";
}
<head>
    <link href="~/css/modal-style.css" rel="stylesheet" />
</head>
<h1>Marketplace</h1>
<body>
    <div>
        @{
            Random rnd = new Random();
            var pokemons = CardMethods.GetPokemonCards();
            var randomi = pokemons.OrderBy(x => rnd.Next()).Take(1);

        }
    </div>

    <div class="wrapper">
        <div class="ball">
            <div class="red-half"></div>
            <div class="white-half"></div>
            <div class="black-band"></div>
            <div class="outer-button">
                <div class="inner-button"><button data-modal-target="#modal" class="startpoint" id="raffleButton"></button>
                </div>
            </div>
        </div>
    </div>

    
    <div class="modal" id="modal">
        <div class="modal-header">
            <div class="title">GOTTA CATCH'EM ALL!</div>

        </div>
        <div class="modal-body">
            <table>
                <tr>
                    <td>
                        <div class="card" id="card1" onclick="flipCard(this)">
                            <div class="content">
                                <div class="front">
                                </div>
                                <div class="back">
                                    @{foreach (var card in randomi)
                                        {
                                            <img src=@card.images.small width="200" height="300" />
                                        }}
                                </div>
                            </div>
                        </div>
                    </td>
                    <td>
                        <div class="card" id="card2" onclick="flipCard(this)">
                            <div class="content">
                                <div class="front">
                                </div>
                                <div class="back">
                                    @{foreach (var card in randomi)
                                        {
                                            <img src=@card.images.small width="200" height="300" />
                                        }}
                                </div>
                            </div>
                        </div>
                    </td>
                    <td>
                        <div class="card" id="card3" onclick="flipCard(this)">
                            <div class="content">
                                <div class="front">
                                </div>
                                <div class="back">
                                    @{foreach (var card in randomi)
                                        {
                                            <img src=@card.images.small width="200" height="300" />
                                        }}
                                </div>
                            </div>
                        </div>
                    </td>
                    <td>
                        <div class="card" id="card4" onclick="flipCard(this)">
                            <div class="content">
                                <div class="front">
                                </div>
                                <div class="back">
                                    @{foreach (var card in randomi)
                                        {
                                            <img src=@card.images.small width="200" height="300" />
                                        }}
                                </div>
                            </div>
                        </div>
                    </td>
                    <td>
                        <div class="card" id="card5" onclick="flipCard(this)">
                            <div class="content">
                                <div class="front">
                                </div>
                                <div class="back">
                                    @{foreach (var card in randomi)
                                        {
                                            <img src=@card.images.small width="200" height="300" />
                                        }}
                                </div>
                            </div>
                        </div>
                    </td>
                </tr>
            </table>
        </div>
        <div class="modal-footer">
            <button data-close-button class="close-button">Continue</button>
        </div>
    </div>
    <div id="overlay2"></div>
    <div id="overlay"></div>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/gsap/3.11.0/gsap.min.js"></script>
    <script src="~/js/modal-.popup.js"></script>
</body>